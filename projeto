lista_produtos = ['D-P', 'D-MAR', 'D-ABA', 'D-MOR', 'D-CHO', 'D-GOI', 'D-ABO', 'D-AMN' 'D-NOZ', 'D-AME', 'D-PAÇ']

print('''1 - Adicionar um produto
2 - Remover um produto
3 - Ver os produtos atuais
4 - Ver nomenclaturas
5 - Sair do programa''')

itens = []

while True:
    op = str(input('O que você deseja fazer?'))
    if op == '1':
        cod = str(input('Insira o código deste produto que você deseja adicionar'))
        if cod in itens:
            print('Esse produto já foi registrado!')
        elif not cod in itens and cod[:2] == 'D-':
            itens.append(cod)
            print('Produto registrado com sucesso!')
    elif op == '2':
        produto = str(input('Insira o nome do produto que você deseja remover'))
        if produto in itens:
            itens.remove(produto)
            if not produto in itens:
                print('Produto removido com sucesso!')
        else:
            print('Produto não encontrado, você digitou corretamente?')
    elif op == '3':
        print(itens)
    elif op == '4':
        print('Nomenclaturas:')
        print('------------------------------------------')
        print('Doce de leite puro = D-P')
        print('Doce de leite com maracujá = D-MAR')
        print('Doce de leite com abacaxi = D-ABA')
        print('Doce de leite com morango = D-MOR')
        print('Doce de leite com chocolate = D-CHO')
        print('Doce de leite com goiaba = D-GOI')
        print('Doce de leite com abóbora = D-ABO')
        print('Doce de leite com amendoim = D-AMN')
        print('Doce de leite com nozes = D-NOZ')
        print('Doce de leite com ameixa = D-AME')
        print('Doce de leite com paçoca = D-PAÇ')
    elif op == '5':
        print('Saindo, obrigado por utilizar o programa!')
        break
